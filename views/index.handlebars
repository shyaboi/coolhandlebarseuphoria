<h1>Eat da Burger</h1>

{{!-- <h3>Show the burgers ready to be devoured and those that already have been</h3> --}}

    <div class="wrapper">
        <div id="leftDiv">Burgers not ate
          <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                <p>{{this.id}} {{this.burger_name}} <span>
                  <button class="devour-burger" data-id="{{this.id}}">Devour It!</button>
                </span></p>
              </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        <div id="rightDiv">Burgers Ate
          <ul>
            {{#each burgers}}
            {{#if this.devoured}}
              <li>
                <p>{{this.id}} {{this.burger_name}} <span>
                  <button class="delete-burger" data-id="{{this.id}}">Delete</button>
                </span></p>
              </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
    </div>
    <br> 
    <br>
